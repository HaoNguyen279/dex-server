<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thông Tin Bệnh Nhân</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f5f6fa;
            margin: 0;
            padding: 0;
        }

        .patient-layout {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Navigation */
        .patient-sidebar {
            width: 250px;
            background: #e3f2fd;
            padding: 0;
            box-shadow: 2px 0 5px rgba(0,0,0,0.05);
        }

        .patient-sidebar-header {
            padding: 25px 20px;
            background: #bbdefb;
            border-bottom: 1px solid #90caf9;
        }

        .patient-sidebar-title {
            color: #1976d2;
            font-size: 20px;
            font-weight: 600;
            margin: 0;
        }

        .patient-nav {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .patient-nav-item {
            border-bottom: 1px solid #bbdefb;
        }

        .patient-nav-link {
            display: block;
            padding: 15px 20px;
            color: #1565c0;
            text-decoration: none;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .patient-nav-link:hover {
            background: #bbdefb;
            padding-left: 25px;
        }

        .patient-nav-link.active {
            background: #90caf9;
            color: #0d47a1;
            border-left: 4px solid #1976d2;
        }

        /* Main Content */
        .patient-main {
            flex: 1;
            padding: 40px;
            overflow-y: auto;
        }

        .patient-container {
            max-width: 1000px;
            margin: 50px;
        }
        
        .patient-card {
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            overflow: hidden;
        }
        
        .patient-header {
            background: #f8f9fa;
            padding: 25px;
            border-bottom: 2px solid #e9ecef;
        }
        
        .patient-title {
            color: #2c3e50;
            font-size: 24px;
            font-weight: 600;
            margin: 0;
        }
        
        .patient-body {
            padding: 30px;
        }
        
        .patient-section {
            margin-bottom: 25px;
        }
        
        .patient-section-title {
            color: #495057;
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 15px;
            padding-bottom: 8px;
            border-bottom: 1px solid #dee2e6;
        }
        
        .patient-info-row {
            display: flex;
            padding: 10px 0;
            border-bottom: 1px solid #f8f9fa;
        }
        
        .patient-info-row:last-child {
            border-bottom: none;
        }
        
        .patient-label {
            flex: 0 0 180px;
            color: #6c757d;
            font-weight: 500;
        }
        
        .patient-value {
            flex: 1;
            color: #212529;
        }
        
        .patient-nested {
            margin-left: 20px;
            padding-left: 15px;
            border-left: 2px solid #e9ecef;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .patient-sidebar {
                width: 200px;
            }

            .patient-main {
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="patient-layout">
        <!-- Sidebar Navigation -->
        <aside class="patient-sidebar">
            <div class="patient-sidebar-header">
                <h2 class="patient-sidebar-title">Bệnh Nhân</h2>
            </div>
            <nav>
                <ul class="patient-nav">
                    <li class="patient-nav-item">
                        <a href="#" class="patient-nav-link active">Hồ Sơ</a>
                    </li>
                    <li class="patient-nav-item">
                        <a href="#" class="patient-nav-link">Lịch Khám</a>
                    </li>
                    <li class="patient-nav-item">
                        <a href="#" class="patient-nav-link">Kết Quả Xét Nghiệm</a>
                    </li>
                    <li class="patient-nav-item">
                        <a href="#" class="patient-nav-link">Đơn Thuốc</a>
                    </li>
                    <li class="patient-nav-item">
                        <a href="#" class="patient-nav-link">Hóa Đơn</a>
                    </li>
                    <li class="patient-nav-item">
                        <a href="#" class="patient-nav-link">Bảo Hiểm</a>
                    </li>
                    <li class="patient-nav-item">
                        <a href="#" class="patient-nav-link">Tài Liệu Y Tế</a>
                    </li>
                    <li class="patient-nav-item">
                        <a href="#" class="patient-nav-link">Cài Đặt</a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="patient-main">
            <div class="patient-container">
                <div class="patient-card">
                    <div class="patient-header">
                        <h1 class="patient-title">Hồ Sơ Bệnh Nhân</h1>
                    </div>
                    
                    <div class="patient-body">
                        <!-- Thông tin cơ bản -->
                        <div class="patient-section">
                            <h2 class="patient-section-title">Thông Tin Cơ Bản</h2>
                            <div class="patient-info-row">
                                <span class="patient-label">Mã bệnh nhân:</span>
                                <span class="patient-value">BN001</span>
                            </div>
                            <div class="patient-info-row">
                                <span class="patient-label">Họ tên:</span>
                                <span class="patient-value">Nguyễn Văn A</span>
                            </div>
                            <div class="patient-info-row">
                                <span class="patient-label">Ngày sinh:</span>
                                <span class="patient-value">15/03/1985</span>
                            </div>
                            <div class="patient-info-row">
                                <span class="patient-label">Giới tính:</span>
                                <span class="patient-value">Nam</span>
                            </div>
                            <div class="patient-info-row">
                                <span class="patient-label">Số điện thoại:</span>
                                <span class="patient-value">0912345678</span>
                            </div>
                        </div>

                        <!-- Thông tin báo hiểm -->
                        <div class="patient-section">
                            <h2 class="patient-section-title">Thông Tin Bảo Hiểm</h2>
                            <div class="patient-info-row">
                                <span class="patient-label">Mã bảo hiểm:</span>
                                <span class="patient-value">BH123456789</span>
                            </div>
                            <div class="patient-nested">
                                <div class="patient-info-row">
                                    <span class="patient-label">Nhà cung cấp:</span>
                                    <span class="patient-value">Bảo Hiểm Y Tế Việt Nam</span>
                                </div>
                                <div class="patient-info-row">
                                    <span class="patient-label">Ngày hết hạn:</span>
                                    <span class="patient-value">31/12/2025</span>
                                </div>
                            </div>
                        </div>

                        <!-- Địa chỉ -->
                        <div class="patient-section">
                            <h2 class="patient-section-title">Địa Chỉ</h2>
                            <div class="patient-info-row">
                                <span class="patient-label">Đường:</span>
                                <span class="patient-value">123 Nguyễn Trãi</span>
                            </div>
                            <div class="patient-info-row">
                                <span class="patient-label">Thành phố:</span>
                                <span class="patient-value">Thành phố Hồ Chí Minh</span>
                            </div>
                            <div class="patient-info-row">
                                <span class="patient-label">Tỉnh:</span>
                                <span class="patient-value">Hồ Chí Minh</span>
                            </div>
                        </div>

                        <!-- Thông tin khác -->
                        <div class="patient-section">
                            <h2 class="patient-section-title">Thông Tin Khác</h2>
                            <div class="patient-info-row">
                                <span class="patient-label">Ngày hẹn:</span>
                                <span class="patient-value">25/10/2025 - 09:30</span>
                            </div>
                            <div class="patient-info-row">
                                <span class="patient-label">Số lần:</span>
                                <span class="patient-value">3</span>
                            </div>
                            <div class="patient-info-row">
                                <span class="patient-label">CCCD:</span>
                                <span class="patient-value">079085001234</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Active tab handling
        document.querySelectorAll('.patient-nav-link').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                document.querySelectorAll('.patient-nav-link').forEach(l => l.classList.remove('active'));
                this.classList.add('active');
            });
        });
    </script>
</body>
</html>